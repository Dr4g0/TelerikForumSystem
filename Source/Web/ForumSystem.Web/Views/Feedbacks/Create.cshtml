@model ForumSystem.Web.ViewModels.Feedbacks.FeedbackViewModel

@{
    ViewBag.Title = "Leave feedback";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Feedbacks", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
            @Html.EditorFor(model => model.Title, new { placeholder = "Title123" })
    </div>

    <div class="form-group">
        @Html.EditorFor(model => model.Content)
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Leave feedback" class="btn btn-primary btn-lg" />
    </div>
}
